@model List<Category>
<div class="table-responsive">
    <a type="button" class="btn btn-primary m-3" asp-action="Create" asp-controller="Category">Create</a>
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@(category.Type == 1 ? "Cash receipt" : "Cash expense")</td>
                    <td>
                        <a type="button" asp-route-id="@category.Id" asp-action="Edit" asp-controller="Category" class="btn btn-outline-primary">Edit</a>
                        <a type="button" asp-route-id="@category.Id" asp-action="Delete" asp-controller="Category" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>